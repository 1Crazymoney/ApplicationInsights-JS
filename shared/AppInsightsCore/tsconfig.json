{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es3",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "shared/AppInsightsCore/types",
    "outDir": "dist-esm/",
    "rootDir": "shared/AppInsightsCore",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./Tests/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
